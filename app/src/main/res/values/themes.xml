<resources>
    <!-- Base application theme. -->
    <style name="Theme.Arlocalization" parent="@style/Theme.AppBase">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorOnSurface">@color/black</item>

    </style>

    <style name="Theme.AppBase" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="bottomSheetStyle">@style/AppStandardBottomSheet</item>
        <item name="floatingActionButtonSecondaryStyle">@style/FloatingActionButtonStyle</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/FabShapeStyle</item>
    </style>

    <style name="FabShapeStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">15%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="AppStandardBottomSheet">
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="shapeAppearance">@style/LargeComponent</item>
        <item name="android:elevation">8dp</item>
        <item name="behavior_hideable">false</item>
        <item name="behavior_draggable">true</item>
        <item name="behavior_skipCollapsed">true</item>
        <item name="behavior_peekHeight">250dp</item>
        <item name="behavior_fitToContents">true</item>
        <item name="behavior_expandedOffset">0dp</item>
    </style>
</resources>